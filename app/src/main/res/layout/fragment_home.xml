<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_height="wrap_content">




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/incomeedittext"

                android:padding="10dp"
                android:hint="Income"
                android:textSize="30dp"
                >

            </EditText>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Business"
                android:text="business">

            </CheckBox>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/office"
                android:text="office">

            </CheckBox>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/moneywithdrol"
                android:text="money withdrol">

            </CheckBox>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/other"
                android:text="other">

            </CheckBox>


            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Add"
                android:id="@+id/addbotton"
                android:backgroundTint="#25B82B"


                android:textStyle="bold"

               >

            </Button>




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expence"
                android:hint="Expence"
                android:padding="10dp"
                android:textSize="30dp">

            </EditText>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/home"
                android:text="home expence">

            </CheckBox>

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/business"
                android:text="business expence">

            </CheckBox>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="money expence"
                android:id="@+id/money"
                >

            </CheckBox>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/otherexpence"
                android:text="other expence">

            </CheckBox>




            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Withdrowl"
                android:id="@+id/withdrowlbtn"

                android:backgroundTint="#FB4141"
                android:textStyle="bold"

            >

            </Button>




    </LinearLayout>


    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:columnCount="3"
        android:rowCount="3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_column="0"
            android:textSize="25dp"
            android:layout_row="0"
            android:textColor="@color/black"
            android:layout_columnWeight="1"

            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:text="today"
            android:layout_column="1"

            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"

            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mounth"
            android:layout_column="2"
            android:layout_row="0"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"

            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="income"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"

            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:id="@+id/todayincome"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="0"
            android:textColor="@color/black"

            android:textSize="25dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_column="2"
            android:layout_row="1"
           android:id="@+id/monthincome"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"

            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expence"
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"

            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_column="1"
            android:id="@+id/todayexpencetextview"
            android:layout_row="2"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"

            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_column="2"
            android:layout_row="2"
            android:id="@+id/mothexpencetextview"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:layout_columnWeight="1"

            >

        </TextView>


    </GridLayout>









</LinearLayout>